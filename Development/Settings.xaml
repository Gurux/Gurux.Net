<UserControl x:Class="Gurux.WP7.Network.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">       
    <Grid x:Name="LayoutRoot" FlowDirection="LeftToRight" Height="160" Width="480">
        <Canvas Height="85" HorizontalAlignment="Left" Name="canvas1" VerticalAlignment="Top" Width="480">
            <TextBlock Canvas.Left="16" Canvas.Top="27" Height="30" Name="IPAddressLbl" Text="IP AddressX" />
            <TextBox Canvas.Left="136" Canvas.Top="7" Height="72" Name="IPAddressTB" Text="" Width="328" />
        </Canvas>
        <Canvas HorizontalAlignment="Left" Margin="10,72,0,213" Name="canvas2" Width="480">
            <TextBlock Canvas.Left="6" Canvas.Top="25" Height="30" Name="PortLbl" Text="PortX" />
            <TextBox Canvas.Left="126" Canvas.Top="6" Height="72" Name="PortTB" Text="" Width="328" />            
        </Canvas>
    </Grid>
</UserControl>
